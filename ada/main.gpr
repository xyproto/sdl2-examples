with "sdlada";
with "config/main_config.gpr";

project Main is
   for Main use ("main.adb");
   for Source_Dirs use (".");
   for Object_Dir use ".";
   for Exec_Dir use ".";

   package Compiler is
      for Switches ("ada") use Main_Config.Ada_Compiler_Switches;
   end Compiler;

   package Linker is
      for Switches ("ada") use ("-g", "-lSDL2", "-lSDL2_image");
   end Linker;
end Main;
